<% if user_signed_in? %>
  <div class="widget-header">
    <div class="icontext">
      <div class="text-wrap dropdown">
        <small><%= "Welcome " + current_user.name %></small>
        <a href="#" class="b" data-toggle="dropdown" data-offset="20,10" aria-expanded="false">
          My account <i class="fa fa-caret-down"></i>
        </a>
        <div class="dropdown-menu">
          <%= link_to 'Editar perfil', edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div> <!-- text-wrap.// -->
    </div>
  </div>
<% else %>
  <div class="widget-header">
    <small class="title text-muted">Welcome guest!</small>
    <div>
      <%= link_to "Login in", new_user_session_path, class: "dark-transp", role: "button" %> | </span>
      <%= link_to "Register", new_user_registration_path, class: "dark-transp", role: "button" %>
    </div>
  </div>
<% end %>


<%= link_to carts_path, class: "widget-header border-left pl-3 ml-3" do %>
  <div class="icontext">
    <div class="icon-wrap icon-sm round border"><i class="fa fa-shopping-cart"></i></div>
  </div>
  <span class="badge badge-pill badge-danger notify"><%= current_order.order_items.size %></span>
<% end %>
