
<div class="container padding-top">
  <h1>All categories (<%= @categories.length %>)</h1>
  <ol>

    <% @categories.each do |category| %>
      <li>
        <%= link_to category_products_path(category) do %>
        <%= category.title %> (<%= category.products_count %> products)
        <% end %>

      </li>
    <% end %>
  </ol>
</div>